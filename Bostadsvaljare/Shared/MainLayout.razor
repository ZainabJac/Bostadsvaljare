@inherits LayoutComponentBase
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Navigations


<div class="topnav">
    <NavMenu />
</div>

<div class="main">
    <div class="top-center px-4">


    </div>

    <div class="content px-4">
        @Body

        <div id="tipmsg"></div>
    </div>
</div>


<style>

    /* width */
    ::-webkit-scrollbar {
        height: 10px;
        width: 0px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 8px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #415965;
        border-radius: 8px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #576a74;
        }


    .loader {
        display: inline-block;
        width: 30px;
        height: 30px;
        position: relative;
        border: 4px solid #415965;
        top: 50%;
        animation: loader 2s infinite ease;
    }

    .loader-inner {
        vertical-align: top;
        display: inline-block;
        width: 100%;
        background-color: #415965;
        animation: loader-inner 2s infinite ease-in;
    }

    @@keyframes loader {
        0% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(180deg);
        }

        50% {
            transform: rotate(180deg);
        }

        75% {
            transform: rotate(360deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes loader-inner {
        0% {
            height: 0%;
        }

        25% {
            height: 0%;
        }

        50% {
            height: 100%;
        }

        75% {
            height: 100%;
        }

        100% {
            height: 0%;
        }
    }
    .main {
        margin-top: 62px;
    }

    #tipmsg {
        display: none;
        position: absolute;
        background-color: #F0F0F0;
        padding-left: 5px;
        padding-right: 5px;
        border-radius: 7px;
        white-space: pre-wrap;
        pointer-events: none;
        color: #415965;
        font-family: acumin-pro,sans-serif;
        
    }

    .e-btn, .e-css.e-btn {
        font-family: acumin-pro,sans-serif;
    }

    .center {
        display: block;
        margin: auto;
    }

    .hidden {
        display: none;
    }

    .select-none {
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
</style>
