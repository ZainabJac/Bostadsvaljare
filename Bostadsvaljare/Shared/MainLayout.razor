@inherits LayoutComponentBase
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Navigations
@using BlazorPro.BlazorSize

<MediaQueryList>
    <div class="topnav">
        <NavMenu />
    </div>

    <div id="theWindow" class="main">
        <div class="top-center px-4">


        </div>

        <div class="content px-4">
            @Body

            <div id="tipmsg"></div>
        </div>
    </div>
</MediaQueryList>

<style>

    body {
        background-color: white;
    }

    /* width */
    ::-webkit-scrollbar {
        height: 7px;
        width: 7px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #415965;
        border-radius: 1px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #576a74;
        }


    .hidecolorpicker {
        display: none;
    }

    .loader {
        display: inline-block;
        width: 30px;
        height: 30px;
        position: relative;
        border: 4px solid #415965;
        top: 50%;
        animation: loader 2s infinite ease;
    }

    .loader-inner {
        vertical-align: top;
        display: inline-block;
        width: 100%;
        background-color: #415965;
        animation: loader-inner 2s infinite ease-in;
    }

    @@keyframes loader {
        0% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(180deg);
        }

        50% {
            transform: rotate(180deg);
        }

        75% {
            transform: rotate(360deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes loader-inner {
        0% {
            height: 0%;
        }

        25% {
            height: 0%;
        }

        50% {
            height: 100%;
        }

        75% {
            height: 100%;
        }

        100% {
            height: 0%;
        }
    }

    .main {
        margin-top: 62px;
    }

    #tipmsg {
        display: none;
        position: absolute;
        padding-left: 5px;
        padding-right: 5px;
        white-space: pre-wrap;
        pointer-events: none;
        color: #415965;
        font-family: acumin-pro,sans-serif;
        -webkit-tap-highlight-color: transparent;
        background-color: white;
        border: 1px none #000;
        border-radius: 2px;
        box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.16);
        color: rgba(0, 0, 0, 0.87);
        outline: none;
    }

    .e-btn, .e-css.e-btn {
        font-family: acumin-pro,sans-serif;
    }

    .center {
        display: block;
        margin: auto;
    }

    .hidden {
        display: none;
    }

    .select-none {
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -o-user-select: none;
        user-select: none;
    }


    @@media (max-width: 927px) {

        #tipmsg {
            padding-left: 1px;
            padding-right: 1px;
            font-size: 8px;
        }
    }
</style>
