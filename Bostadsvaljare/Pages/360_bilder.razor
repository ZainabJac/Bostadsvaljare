@page "/360_bilder"

@implements IDisposable
@inject IJSRuntime JSRuntime


<div id="pan_container" class="select-none"></div>


@code {
    protected override async void OnInitialized() {
        base.OnInitialized();
        await Task.Delay(100);
        await JSRuntime.InvokeVoidAsync("pan_viewer.init");
        await Task.Delay(100);
        await JSRuntime.InvokeVoidAsync("pan_viewer.start", "apt_data");
    }

    public async void Dispose() {
        await JSRuntime.InvokeVoidAsync("pan_viewer.dispose");
    }
}


<style>
    body {
        margin: 0;
        overflow: hidden;
    }

    canvas {
        margin: auto;
    }

    #pan_container {
        display: flex;
        width: 100%;
    }

    #pan_container.fullscreen {
        position: absolute;
        left: 0px;
        top: 0px;
        z-index: 1000000;
    }
</style>
